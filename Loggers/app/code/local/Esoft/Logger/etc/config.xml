<?xml version="1.0"?>
<config>
    <modules>
        <Esoft_Logger>
            <version>1.2.1</version>
        </Esoft_Logger>
    </modules>
    <!-- Frontend -->
    <frontend>
        <routers>
            <logger>
                <use>standard</use>
                <args>
                    <module>Esoft_Logger</module>
                    <frontName>logger</frontName>
                </args>
            </logger>
        </routers>
        <!-- <layout>
            <updates>
                <logger>
                    <file>logger.xml</file>
                </logger>
            </updates>
        </layout> -->
    </frontend>
    <!-- Admin Panel URL Access -->
    <admin>
        <routers>
            <logger>
                <use>admin</use>
                <args>
                    <module>Esoft_Logger</module>
                    <frontName>logger</frontName>
                </args>
            </logger>
        </routers>
    </admin>
    <!-- Admin Access -->
    <adminhtml>
    <events>
        <core_block_abstract_prepare_layout_after>
            <observers>
                <esoft_logger_dashboard>
                     <type>singleton</type>
                    <class>Esoft_Logger_Model_Dashboard_Observer</class>
                    <method>coreBlockAbstractPrepareLayoutAfter</method>
                </esoft_logger_dashboard>
            </observers>
        </core_block_abstract_prepare_layout_after>
        <core_block_abstract_to_html_after>
            <observers>
                <esoft_logger_dashboard>
                    <type>singleton</type>
                    <class>Esoft_Logger_Model_Dashboard_Observer</class>
                    <method>coreBlockAbstractToHtmlAfter</method>
                </esoft_logger_dashboard>
            </observers>
        </core_block_abstract_to_html_after>
        </events>
        <menu>
            <logger module="logger">
                <title>Logger</title>
                <sort_order>71</sort_order>               
                <children>
                    <items module="logger">
                        <title>Map Categories</title>
                        <sort_order>0</sort_order>
                        <action>logger/adminhtml_logger</action>
                    </items>
                </children>
            </logger>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Esoft_Logger>
                            <title>Logger Module</title>
                            <sort_order>10</sort_order>
                        </Esoft_Logger>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <logger translate="title" module="esoft_logger">
                                            <title>Store Logger Section</title>
                                        </logger>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <logger>
                    <file>logger.xml</file>
                </logger>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <logger>
                <class>Esoft_Logger_Model</class>
                <resourceModel>logger_mysql4</resourceModel>
            </logger>
            <logger_mysql4>
                <rewrite>
                    <logger_collection>Esoft_Logger_Model_Mysql4_Logger_Collection</logger_collection>
                </rewrite>
                <class>Esoft_Logger_Model_Mysql4</class>
                <entities>
                    <logger>
                        <table>logger</table>
                    </logger>
                </entities>
            </logger_mysql4>
        </models>
        <resources>
            <logger_setup>
                <setup>
                    <module>Esoft_Logger</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </logger_setup>
            <logger_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </logger_write>
            <logger_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </logger_read>
        </resources>
        <blocks>
            <logger>
                <class>Esoft_Logger_Block</class>
            </logger>            
        </blocks>
        <helpers>
            <logger>
                <class>Esoft_Logger_Helper</class>
            </logger>
        </helpers>
    </global>
</config>